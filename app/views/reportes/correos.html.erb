<div class="hero-unit">
<h1 class="text-info">Contactos con los asistentes</h1>
<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>N°</th>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Celular</th>
      <th>Email</th>      
      <th>Región</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
	<% i=0 %>
    <% @personas.each do |persona| %>
      <tr>
		<td><%= i+=1%></td>
        <td><%= persona.nombres %></td>
        <td><%= persona.apellidos %></td>
        <td><%= persona.celular %></td>
        <td><%= persona.email %></td>
        <td><%= persona.region.nombre unless persona.region.blank? %></td>        
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>
