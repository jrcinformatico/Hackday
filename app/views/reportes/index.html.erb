<div class="hero-unit">
<h1 class="text-info">Asistentes al HackDay Tacna</h1>
<h4>Total de personas inscritas: <%= @totalpersona%></h4>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Celular</th>
      <th>Conferencia</th>
      <th>Institución</th>
      <th>Estudio</th>      
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.nombres %></td>
        <td><%= persona.apellidos %></td>
        <td><%= persona.celular %></td>
        <td><%= persona.institucion%></td>
        <td><%= persona.conferencia %></td>
        <td><%= persona.estudio.nombre %></td>
        <td><%= link_to 'Mostrar', persona %></td>
        <td><%= link_to 'Editar', edit_persona_path(persona) %></td>
        <td><%= link_to 'Eliminar', persona, method: :delete, data: { confirm: 'Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
